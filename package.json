{
  "name": "kasmaji-api",
  "version": "1.0.0",
  "description": "Kasmaji API",
  "main": "index.js",
  "engines": {
    "node": "12.20.0"
  },
  "scripts": {
    "test": "jest --detectOpenHandles --colors",
    "lint": "eslint src/*/*/*/*/** tests/** --fix --cache",
    "build": "rimraf ./build && tsc",
    "dev": "NODE_ENV=development ts-node-dev --inspect --respawn --transpile-only src/interfaces/http/index.ts",
    "start": "node -r dotenv/config build/interfaces/http/index.js",
    "build-and-start": "yarn build && node ./build/interfaces/http/index.js",
    "db:migrate": "NODE_ENV=development npx sequelize-cli db:migrate",
    "heroku-prebuild": "export NPM_CONFIG_PRODUCTION=false; export NODE_ENV=; NPM_CONFIG_PRODUCTION=false NODE_ENV=development yarn install --only=dev --dev",
    "heroku-postbuild": "export NPM_CONFIG_PRODUCTION=true; export NODE_ENV=production;"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.4",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^25.2.1",
    "@types/multer": "^1.4.5",
    "@types/ramda": "^0.27.32",
    "@types/require-dir": "^1.0.1",
    "@types/sequelize": "^4.28.9",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "jest-html-reporters": "^1.2.1",
    "rimraf": "^3.0.2",
    "sequelize-cli": "^6.2.0",
    "ts-jest": "^25.3.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "change-case": "^4.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.9.0",
    "helmet": "^4.3.1",
    "moment": "^2.29.1",
    "multer": "^1.4.2",
    "mysql": "^2.18.1",
    "mysql2": "^2.2.5",
    "ramda": "^0.27.1",
    "require-dir": "^1.2.0",
    "sequelize": "^6.3.5",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "winston-transport": "^4.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}